.main
  .main__chat__tag Chat-Space
  .main__chat
    .main__chat__box
      .main__chat__box__space
        -@messages.each do |message|
          .messages
            .message__upper__info
              %p.name yamada
              %p.date=message.created_at
            %p.message=message.content
      .main__chat__box__input
        =form_with model: @message, class: "input__box" do |f|
          .message__box
            =f.text_field :content, placeholder: "メッセージを入力", class: "message"
          =f.submit "送信", class: "submit--btn"