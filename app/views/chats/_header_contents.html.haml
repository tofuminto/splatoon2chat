.header__contents
  .header__contents__left
    .side--bar__btn
      = icon('fas', 'bars', class: 'header__left__icon')
    .header__contents__left__title
      = link_to root_path, class:'header__title' do
        %p.title Splatoon2 Chat
  .header__contents__right
    - if user_signed_in?
      %p.user__name=@nickname
      -# = link_to user_path(current_user)
      = link_to "/users/#{current_user.id}", class:'user__icon' do
        = icon('fas', 'user-edit')
      = link_to "/users/sign_out", method: :delete, class:'user__icon' do
        = icon('fas', 'sign-out-alt')
    - else
      = link_to "/users/sign_up", class:'user__icon' do
        = icon('fas', 'user-plus')
      = link_to "/users/sign_in", class:'user__icon' do
        = icon('fas', 'sign-in-alt')
